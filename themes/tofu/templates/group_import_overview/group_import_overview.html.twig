{#
/**
 * @file
 * Group import overview.
 *
 */
#}
<div class="section">
  <div class="list">
    <div class="title">
      {{ content.title }}
    </div>
    <div class="content">
      <ul>
        {% if content.imports is empty %}
          {{ content.empty }}
        {% else %}
        {% for import in content.imports %}
        <li>
          <div class="column-wrapper">
            <div class="column-10-15 first-column">
              {{ import.type }}
              {{ import.source }}
              {{ import.created }}
              {{ import.event_count }}
            </div>
            <div class="column-5-15 last-column">
              {{ import.more_info }}
            </div>
          </div>
        </li>
        {% endfor %}
        {% endif %}
      </ul>
    </div>
    <div class="footer">
      {{ content.create_csv_link }}
    </div>
  </div>
</div>
