{#
/**
 * @file
 * Organization group overview.
 *
 */
#}
<div class="section">
  <div class="list">
    <div class="title">
      {{ content.title }}
    </div>
    <div class="content">
      <ul>
        {% for group in content.groups %}
        <li>
          <div class="column-wrapper">
            <div class="column-3-15">
              {{ group.logo }}
            </div>
            <div class="column-12-15">
              {{ group.title }}
              {{ group.location }}
              {{ group.event_count }}
            </div>
          </div>
        </li>
        {% endfor %}
      </ul>
    </div>
    <div class="footer">
      {{ content.pager }}
      {{ content.create_link }}
    </div>
  </div>
</div>
