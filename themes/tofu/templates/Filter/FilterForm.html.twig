{#
/**
 * @file
 * A filter form page.
 *
 */
#}
<form{{ attributes }}>
{{ form.form_build_id }}
{{ form.form_token }}
{{ form.form_id }}
  <div class="section">
    <div class="title">
      {{ 'Filter'|t }}
    </div>
    <div class="title">
      {{ form.name }}
    </div>
    <div class="content">
      <div class="column-wrapper">
        <div class="column-15-15">
          <div class="section">
            Filter by dates
            <div class="content">
              <div class="column-7-15 first-column">
                {{ form.start_date }}
              </div>
              <div class="column-7-15 last-column">
                {{ form.end_date }}
              </div>
            </div>
          </div>
        </div>
        <div class="column-5-15">
          <div class="section">
            Filter by location
            <div class="content">
              {{ form.location }}
            </div>
          </div>
        </div>
        <div class="column-10-15">
          &nbsp;
        </div>
      </div>
    </div>
    <div class="footer">
      {{ form.actions.submit }}
      {{ help_button }}
    </div>
  </div>
</form>
