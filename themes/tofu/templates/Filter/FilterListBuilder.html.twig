{#
/**
 * @file
 * Filter list.
 *
 */
#}
<div class="section">
  <div class="list filters">
    <div class="title">
      {{ content.title }}
    </div>
    <div class="content">
      <ul>
        {% for filter in content.filters %}
        <li>
          <div class="column-wrapper">
            <div class="column-8-15 first-column">
              {{ filter.title }}
            </div>
            <div class="column-3-15">
              {{ filter.event_count }}
            </div>
            <div class="column-4-15 last-column">
              {{ filter.more_info }}
            </div>
          </div>
        </li>
        {% endfor %}
      </ul>
    </div>
    <div class="footer">
      {{ content.pager }}
      {{ content.create_link }}
    </div>
  </div>
</div>
