{#
/**
 * @file
 * The user register form.
 *
 */
#}
<form{{ attributes }}>
{{ form.form_build_id }}
{{ form.form_token }}
{{ form.form_id }}
  <div class="section">
    <div class="title">
      {{ 'Create an account'|t }}
    </div>
    <div class="content">
      <div class="section">
        <div class="column-wrapper">
          <div class="column-5-15 no-spacing">
            <div class="column-wrapper">
              <div class="column-15-15 no-spacing">
                {{ form.account.name }}
              </div>
              <div class="column-15-15 no-spacing">
                {{ form.account.mail }}
              </div>
            </div>
          </div>
          <div class="column-5-15 no-spacing">
          </div>
          <div class="column-5-15 no-spacing">
            {{ form.account.pass }}
          </div>
          <div class="column-5-15 no-spacing">
            {{ form.afa_challenge }}
            {{ form.afa_username }}
          </div>
          <div class="column-10-15 no-spacing">
          </div>
          <div class="column-15-15 no-spacing">
            <div class="title">
              Privacy notice
            </div>
            <div class="content">
              <ul class="bullet-list">
                <li>No personal information is collected, except for your e-mail address.</li>
                <li>No personal information is shared with third-parties.</li>
                <li>No personal information or cookies are used for tracking.</li>
                <li>Your e-mail address is used for verifying your account and sending notifications to you and nothing else.</li>
                <li>A cookie is set to verify that your account is logged in and nothing else.</li>
              </ul>
            </div>
            <div class="footer">
              {{ form.actions.submit }}
            </div>
          </div>
        </div>
      </div>
    </div>
</form>
